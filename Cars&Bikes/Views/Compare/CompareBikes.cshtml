<head>
    <meta charset="UTF-8">
    <title>Bootstrap Horizontal Scroll Cards</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .scroll-container {
            position: relative;
        }

        .scroll-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            z-index: 2;
            background-color: rgba(0, 0, 0, 0.6);
            border: none;
            color: white;
            padding: 10px;
            cursor: pointer;
            border-radius: 50%;
        }

        .scroll-left {
            left: 10px;
        }

        .scroll-right {
            right: 10px;
        }

        .card-wrapper {
            display: flex;
            overflow-x: auto;
            scroll-behavior: smooth;
            gap: 1rem;
            padding: 1rem;
        }

            .card-wrapper::-webkit-scrollbar {
                display: none;
            }

        .card {
            flex: 0 0 auto;
            width: 200px;
        }
    </style>
</head>
<body>
<div class="header-img"><img src="~/images/main-slider/header.png" /></div>
<div class="container py-4">
    <h3 class="mb-3">Compare Bikes </h3>

    <div class="scroll-container">
        <button class="scroll-btn scroll-left" onclick="scrollLeft()">&#8249;</button>

        <div class="card-wrapper" id="cardContainer">
            @* <a href="https://example.com/news1" class="text-decoration-none text-dark"> *@
                @* <a href="@Url.Action("TWCompareTwoBikes", "Compare", new { variant1 = 103, variant2 = 205 })" class="text-decoration-none text-dark"> *@
                <div class="card" onclick="compareByNames('Honda Activa 125', 'TVS Jupiter')">
                    <img src="/images/blogs/2025/may/top5royalenfieldbikesinindia/reclassic350.webp" class="card-img-top" alt="News 1">
                    <div class="card-body">
                            <p class="card-text">Honda Activa 125 vs TVS Jupiter </p>
                    </div>
                </div>
           
            <a href="https://example.com/news2" class="text-decoration-none text-dark">
                <div class="card">
                    <img src="/images/blogs/2025/may/top5royalenfieldbikesinindia/RE Interceptor 650.png" class="card-img-top" alt="News 2">
                    <div class="card-body">
                            <p class="card-text">TVS Apache RR 310 vs Royal Enfield Bullet 350</p>
                    </div>
                </div>
            </a>
            <a href="https://example.com/news3" class="text-decoration-none text-dark">
                <div class="card">
                    <img src="/images/blogs/2025/may/top5royalenfieldbikesinindia/RE Shotgun 650.png" class="card-img-top" alt="News 3">
                    <div class="card-body">
                            <p class="card-text">Royal Enfield Hunter 350 vs TVS Ronin</p>
                    </div>
                </div>
            </a>
            <a href="https://example.com/news4" class="text-decoration-none text-dark">
                <div class="card">
                    <img src="/images/blogs/2025/may/top5royalenfieldbikesinindia/rehimalayan450.webp" class="card-img-top" alt="News 4">
                    <div class="card-body">
                            <p class="card-text">Honda Activa 125 FI vs Suzuki New Access 125</p>
                    </div>
                </div>
            </a>
            <a href="https://example.com/news4" class="text-decoration-none text-dark">
                <div class="card">
                    <img src="/images/blogs/2025/may/top5royalenfieldbikesinindia/remeteor350.webp" class="card-img-top" alt="News 4">
                    <div class="card-body">
                            <p class="card-text">Honda Activa 6G vs Honda Activa 125</p>
                    </div>
                </div>
            </a>
                <a href="https://example.com/news4" class="text-decoration-none text-dark">
                    <div class="card">
                        <img src="/images/blogs/2025/may/top5royalenfieldbikesinindia/remeteor350.webp" class="card-img-top" alt="News 4">
                        <div class="card-body">
                            <p class="card-text">Bajaj Pulsar RS 200 vs Hero Karizma ZMR</p>
                        </div>
                    </div>
                </a>
        </div>

        <button class="scroll-btn scroll-right" onclick="scrollRight()">&#8250;</button>
    </div>
</div>

<script>
    const container = document.getElementById('cardContainer');

    function scrollLeft() {
      container.scrollBy({ left: -220, behavior: 'smooth' });
    }

    function scrollRight() {
      container.scrollBy({ left: 220, behavior: 'smooth' });
    }
        function compareByNames(bikeName1, bikeName2) {
        $.ajax({
        url: '/Compare/GetVariantIdsByNames',
        type: 'GET',
        data: { name1: bikeName1, name2: bikeName2 },
        success: function (response) {
        if (response.success) {
        // Redirect to comparison page with the fetched IDs
            // window.location.href = `/Compare/GetVariantIdsByNames?variant1=${response.variantId1}&variant2=${response.variantId2}`;
                        window.location.href = `/Compare/GetVariantIdsByNames?variant1=${response.bikeName1}&variant2=${response.bikeName2}`;
        } else {
        alert("Bikes not found or incomplete data.");
        }
        },
        error: function () {
        alert("Error occurred while fetching data.");
        }
        });
        }
</script>
    

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
