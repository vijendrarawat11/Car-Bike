    <meta name="description" content="Explore the TVS Jupiter CNG scooter with 140-mile range, eco-friendly dual-fuel tech, and a starting price of ₹90,000. Perfect for sustainable urban commuting!" />
}
<!--For truncate-->
@functions {
    public string Truncate(string input, int length)
    {
        if (string.IsNullOrEmpty(input) || input.Length <= length)
            return input;
        return input.Substring(0, length) + "...";
    }
}
