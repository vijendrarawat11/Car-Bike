@section MetaTags{
    <meta name="keywords" content="Ratan Tata, Tata Group, Tata leadership, Tata legacy, global success, Tata acquisitions, Jaguar Land Rover, Corus Steel, Tata Trusts, business ethics" />
    <meta name="description" content="Ratan Tata, former chairman of Tata Group, played a pivotal role in its global success through strategic leadership, bold acquisitions, and a commitment to ethical business. Learn more about his legacy." />
}
<!--For truncate-->
@functions {
    public string Truncate(string input, int length)
    {
        if (string.IsNullOrEmpty(input) || input.Length <= length)
            return input;
        return input.Substring(0, length) + "...";
    }
}
