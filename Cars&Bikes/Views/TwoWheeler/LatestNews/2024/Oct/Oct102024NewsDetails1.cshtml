    <meta name="description" content="The Rolls-Royce Ghost Series II debuts with a refreshed design, new color options, and enhanced luxury features. Discover the updated specs, performance, and customizations." />
}
<!--For truncate-->
@functions {
    public string Truncate(string input, int length)
    {
        if (string.IsNullOrEmpty(input) || input.Length <= length)
            return input;
        return input.Substring(0, length) + "...";
    }
}
