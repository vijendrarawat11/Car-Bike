@{
    ViewData["Title"] = "JSW MG Announces 'MG Select' Outlets for Premium Car Sales Starting 2025";
}
@section MetaTags{
    <meta name="keywords" content="JSW MG, MG Select, premium vehicles, luxury cars, new outlets 2025, MG automotive, high-end car sales, luxury vehicle showrooms" />
    <meta name="description" content="JSW MG will introduce 'MG Select' outlets in 2025, focusing on premium vehicle sales. The new showrooms will offer an exclusive, high-end customer experience with advanced facilities and personalized service." />
}
<!--For truncate-->
@functions {
    public string Truncate(string input, int length)
    {
        if (string.IsNullOrEmpty(input) || input.Length <= length)
            return input;
        return input.Substring(0, length) + "...";
    }
}
