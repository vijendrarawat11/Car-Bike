@{
    ViewData["Title"] = "TVS Apache RR 310 Variants Launch - Performance and Style Redefined";
}
@section MetaTags{
    <meta name="keywords" content="TVS Apache RR 310, new variants, sports bike, motorcycle launch, performance upgrade, motorcycle features, TVS Motors" />
    <meta name="description" content="Discover the new variants of the TVS Apache RR 310, featuring upgraded performance, enhanced design, and smart connectivity. Perfect for both enthusiasts and daily riders." />
}
<!--For truncate-->
@functions {
    public string Truncate(string input, int length)
    {
        if (string.IsNullOrEmpty(input) || input.Length <= length)
            return input;
        return input.Substring(0, length) + "...";
    }
}
