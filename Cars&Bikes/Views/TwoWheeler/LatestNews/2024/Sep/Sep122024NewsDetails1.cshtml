@section MetaTags{
    <meta name="keywords" content="Hyundai Alcazar drawbacks, Hyundai Alcazar demerits, Alcazar SUV disadvantages, Hyundai Alcazar engine performance, Hyundai Alcazar cramped seating, Alcazar vs Tata Safari, Hyundai Alcazar third-row space, Hyundai Alcazar review, Hyundai Alcazar diesel engine noise, Hyundai Alcazar vs Mahindra XUV700, Hyundai Alcazar expensive variants, Hyundai Alcazar no AWD, Hyundai Alcazar issues, Hyundai Alcazar handling flaws, Alcazar SUV comparison" />
    <meta name="description" content="Discover the key drawbacks of the Hyundai Alcazar, including limited engine performance, cramped third-row seating, and the absence of AWD. Learn how it compares to competitors like the Tata Safari and Mahindra XUV700." />
}
<!--For truncate-->
@functions {
    public string Truncate(string input, int length)
    {
        if (string.IsNullOrEmpty(input) || input.Length <= length)
            return input;
        return input.Substring(0, length) + "...";
    }
}
