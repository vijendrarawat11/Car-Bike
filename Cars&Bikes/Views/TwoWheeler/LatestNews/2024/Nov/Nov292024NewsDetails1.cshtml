@{
    ViewData["Title"] = "Honda Activa E and QC1 Electric Scooters: Range, Features, Price in India";
}
@section MetaTags{
    <meta name="keywords" content="Honda Activa E, QC1 Electric Scooter, Honda Electric Scooter India, Activa Electric Range, Activa E Price, Honda EV India, Honda activa electric scooter qc1, Honda activa e qc1 electric scooters, Honda Activa Electric scooter booking, Honda Activa Electric scooter On Road Price, Honda Activa Electric scooter specifications, Honda Activa 6G Electric scooter price, Honda Activa Electric scooter price in Delhi, Honda activa electric qc1, Honda activa electric scooter qc1, Honda Activa Electric scooter booking, Honda Activa Electric On Road Price, Honda Activa Electric range, Honda Activa Electric website, Honda Activa Electric scooter specifications" />
    <meta name="description" content="Discover Honda's new Activa E and QC1 electric scooters launched in India. Explore their impressive 102 km range, advanced features, and expected pricing." />
}
<!--For truncate-->
@functions {
    public string Truncate(string input, int length)
    {
        if (string.IsNullOrEmpty(input) || input.Length <= length)
            return input;
        return input.Substring(0, length) + "...";
    }
}
