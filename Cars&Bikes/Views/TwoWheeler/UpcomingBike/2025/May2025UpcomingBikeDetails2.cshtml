@{
    ViewData["Title"] = "Yezdi Adventure 2025 Launch on 4th June in India";
}
@section MetaTags {
    <meta name="keywords" content="Yezdi Adventure 2025, Yezdi Adventure launch date, Upcoming adventure bikes in India, Yezdi Adventure features, Yezdi Adventure specifications, Yezdi Adventure price in India, OBD-2B compliant bikes, Best adventure bikes 2025, Yezdi motorcycle updates, Yezdi Adventure LED headlamp, Yezdi Adventure riding modes" />
