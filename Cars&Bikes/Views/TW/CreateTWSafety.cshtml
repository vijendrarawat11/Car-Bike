 @model Cars_Bikes.Models.TWSafety

<body>
    <div class="header-img"> <img src="~/images/main-slider/header.png" /></div>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
            <!-- only 80% screen height -->
            <form asp-controller="AdminLogin" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-danger btn-sm">Logout</button>
            </form>
            <div class="col-md-8 col-lg-6">
                <!-- middle sized form -->
                <div class="card shadow-lg p-4">
                    <h2 class="text-center mb-4">Add Safety Features</h2>
                    <form asp-controller="AdminLogin" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-danger btn-sm">Logout</button>
                    </form>
                    <form asp-action="CreateTwSafety" method="post">
                        <h4 class="mt-4">TW Safety</h4>
                        <div class="form-group">
                            <label asp-for="TWName"></label>
                            <input asp-for="TWName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Varients"></label>
                            <input asp-for="Varients" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PassSwitch"></label>
                            <input asp-for="PassSwitch" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EngineKillSwitch"></label>
                            <input asp-for="EngineKillSwitch" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Display"></label>
                            <input asp-for="Display" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="RidingModes"></label>
                            <input asp-for="RidingModes" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="TractionControl"></label>
                            <input asp-for="TractionControl" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="AdditionalFeatures"></label>
                            <input asp-for="AdditionalFeatures" class="form-control" />
                        </div>
                        
                        <div class="form-group">
                            <label>Select Two Wheeler</label>
                            <select asp-for="TwoWheelerId" class="form-control" asp-items="ViewBag.TwoWheelers">
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Select Variant</label>
                            <select asp-for="TWVarientId" class="form-control" asp-items="ViewBag.TWVarients">
                                <option value="">-- Select --</option>
                            </select>
                        </div>
                        @*
                        <input type="hidden" name="TwoWheelerId" value="@ViewBag.TwoWheelerId" />
                        <input type="hidden" name="TWVarientId" value="@ViewBag.TWVarientId" />
                        *@
                        <div class="form-group mt-2">
                            <button type="submit" class="btn btn-primary">Submit All</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

</body>