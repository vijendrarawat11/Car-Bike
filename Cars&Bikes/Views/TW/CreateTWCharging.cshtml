@model Cars_Bikes.Models.TWCharging
@{
    ViewData["Title"] = "Add TW Charging";
}
<body>
    <div class="header-img"> <img src="~/images/main-slider/header.png" /></div>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
            <!-- only 80% screen height -->
            <form asp-controller="AdminLogin" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-danger btn-sm">Logout</button>
            </form>
            <div class="col-md-8 col-lg-6">
                <!-- middle sized form -->
                <div class="card shadow-lg p-4">
<div class="container mt-4">
    <h2 class="text-center mb-4">Add Charging Details</h2>
    <form asp-action="CreateTWCharging" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="TwoWheelerId" class="form-label">Two Wheeler</label>
                <select asp-for="TwoWheelerId" class="form-control" asp-items="ViewBag.TwoWheelers">
                    <option value="">-- Select Two Wheeler --</option>
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="TWVarientId" class="form-label">Varient</label>
                <select asp-for="TWVarientId" class="form-control" asp-items="ViewBag.TWVarients">
                    <option value="">-- Select Varient --</option>
                </select>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="ChargingAtHome" class="form-label">Charging at Home</label>
            <input asp-for="ChargingAtHome" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="ChargingAtChargingStation" class="form-label">Charging at Station</label>
            <input asp-for="ChargingAtChargingStation" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success px-4">Save</button>
    </form>
</div>
                </div>
            </div>

        </div>
    </div>

</body>