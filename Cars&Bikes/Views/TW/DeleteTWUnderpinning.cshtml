@model Cars_Bikes.Models.TWUnderpinning
<body>
<div class="header-img"> <img src="~/images/main-slider/header.png" /></div>
<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <!-- only 80% screen height -->
        <form asp-controller="AdminLogin" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-danger btn-sm">Logout</button>
        </form>
        <div class="col-md-8 col-lg-6">
            <!-- middle sized form -->
            <div class="card shadow-lg p-4">
<h3 class="text-danger">Are you sure you want to delete this item?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-3">TW Name</dt>
        <dd class="col-sm-9">@Model.TwoWheeler?.TwoWheelerName</dd>

        <dt class="col-sm-3">Varient</dt>
        <dd class="col-sm-9">@Model.TWVarients?.Varients</dd>
    </dl>

    <form asp-action="DeleteTWUnderpinning" method="post">
        <input type="hidden" asp-for="TWUnderpinningId" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="ListTWUnderpinning" class="btn btn-secondary">Cancel</a>
    </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
