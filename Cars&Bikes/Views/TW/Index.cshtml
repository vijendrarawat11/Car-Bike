@model IEnumerable<Cars_Bikes.Models.TWSpec>

@{
    ViewData["Title"] = "TWSpec List";
}


<body>
    <div class="header-img"> <img src="~/images/main-slider/header.png" /></div>
    
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-8">
            <h2>TWSpec List</h2>
            <form asp-action="Index" method="get" class="mb-3 d-flex">
                <input type="text" name="searchTerm" class="form-control me-2" placeholder="Search TW Name..." />
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
            <div class="card shadow-lg p-4">
    <div class="table-responsive">

  <table class="table table-striped  table-bordered">
    <thead>
        <tr>
            <th>TW Name</th>
            <th>Variant</th>
            <th>Milage</th>
            <th>Fuel Capacity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TWName</td>
                <td>@item.Varients</td>
                <td>@item.Milage</td>
                <td>@item.FuelCapacity</td>
                <td>
                    <a asp-action="EditTWSpec" asp-route-id="@item.TWSpecId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.TWSpecId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
</div>
    </div>
</body>
