@model Cars_Bikes.Models.TWVarient
@{
    ViewData["Title"] = "Add Two Wheeler Varient";
}



<body>
    <div class="header-img"> <img src="~/images/main-slider/header.png" /></div>



    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
            <!-- only 80% screen height -->

            <div class="col-md-8 col-lg-6">
                <!-- middle sized form -->
                <div class="card shadow-lg p-4">
                    <h2 class="text-center mb-4">Add New Brand</h2>

                    <form asp-action="CreateTWVarient" method="post">
                        <div class="form-group">
                            <label asp-for="Varients" class="control-label"></label>
                            <input asp-for="Varients" class="form-control" />
                            <span asp-validation-for="Varients" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TWName" class="control-label"></label>
                            <input asp-for="TWName" class="form-control" />
                            <span asp-validation-for="TWName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TwoWheelerId" class="control-label">Select Two Wheeler</label>
                            <select asp-for="TwoWheelerId" class="form-control" asp-items="ViewBag.TwoWheelers">
                                <option value="">-- Select --</option>
                            </select>
                            <span asp-validation-for="TwoWheelerId" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

