@model Cars_Bikes.Models.TWImageColorPrice
<body>
    <div class="header-img"> <img src="~/images/main-slider/header.png" /></div>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
            <!-- only 80% screen height -->
            <form asp-controller="AdminLogin" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-danger btn-sm">Logout</button>
            </form>
            <div class="col-md-8 col-lg-6">
                <!-- middle sized form -->
                <div class="card shadow-lg p-4">
<form asp-action="@ViewContext.RouteData.Values["action"]" method="post">
    <div class="form-group">
        <label>TW Name</label>
        <input asp-for="TWName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Variant</label>
        <input asp-for="Varients" class="form-control" />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label>Color</label>
        <input asp-for="Color" class="form-control" />
    </div>
    <div class="form-group">
        <label>Image URL</label>
        <input asp-for="ImageURL" class="form-control" />
    </div>
    <div class="form-group">
        <label>Top Color Code</label>
        <input asp-for="TopColorCode" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bottom Color Code</label>
        <input asp-for="BottomColorCode" class="form-control" />
    </div>
    <div class="form-group">
        <label>Image Alt Tag</label>
        <input asp-for="ImageAltTag" class="form-control" />
    </div>
    <div class="form-group">
        <label>Two Wheeler</label>
        <select asp-for="TwoWheelerId" class="form-control" asp-items="ViewBag.TwoWheelers"></select>
    </div>
    <div class="form-group">
        <label>Variant</label>
        <select asp-for="TWVarientId" class="form-control" asp-items="ViewBag.TWVarients"></select>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>
                </div>
            </div>

        </div>
    </div>

</body>