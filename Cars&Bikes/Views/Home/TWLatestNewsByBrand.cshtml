    <div class="detail-div">
        @foreach (var newsdata in ViewBag.newsbybrand)
        {
            <div class="latest-bike-card">
                <a href="@Url.Action("TWLatestNewsDetails", "Home", new { id = newsdata.TWLatestNewsId })">
                    <div class="latest-allbike-image ">
                        <img src="@newsdata.ImageURL" />
                        <div class="latest-bikes-details-text">
                            <h3>@newsdata.NewsHeading</h3>
                            <p><i class="fa fa-calendar"></i> @newsdata.Date?.ToString("d MMM yyyy")</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>