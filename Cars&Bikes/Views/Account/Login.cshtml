@{
}
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}

<form method="post" action="/Account/Login">
    <label>Username:</label>
    <input type="text" name="username" required />

    <button type="submit">Login</button>
</form>
