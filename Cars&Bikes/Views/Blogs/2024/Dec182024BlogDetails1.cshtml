@{
    ViewData["Title"] = "Electric vs Petrol Bikes: Comparison and Better Option";
}
@section MetaTags{
    <meta name="keywords" content="Electric bikes vs petrol bikes, two-wheeler comparison, electric scooters, petrol motorcycles, eco-friendly bikes, bike performance, EV bikes, Electric bike vs petrol bike running cost, Electric bike vs petrol bike in India" />
