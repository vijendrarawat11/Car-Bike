@{
    ViewData["Title"] = "Tata Nexon vs Škoda Kylaq: India's B-Segment SUV Battle 2025";
}
@section MetaTags {
    <meta name="keywords" content="Tata Nexon vs Škoda Kylaq, Nexon vs Kylaq comparison 2025, Tata Nexon review 2025, Škoda Kylaq features, best sub-4 meter SUV India, Nexon vs Kylaq mileage, Tata Nexon price, Škoda Kylaq specifications, compact SUV comparison 2025, Nexon vs Kylaq safety, Nexon vs Kylaq performance, Nexon vs Kylaq interior, Nexon vs Kylaq ownership cost" />
    <meta name="description" content="Detailed comparison of Tata Nexon and Škoda Kylaq compact SUVs in 2025. Compare design, performance, features, safety and pricing to choose the best sub-4 meter SUV for your needs." />
}

@functions {
    public string Truncate(string input, int length)
    {
        if (string.IsNullOrEmpty(input) || input.Length <= length)
            return input;
        return input.Substring(0, length) + "...";
    }
}
