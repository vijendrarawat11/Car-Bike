@{
    ViewData["Title"] = "Kia Sonet vs Hyundai Venue Comparison 2024 – Features, Specs & Verdict";
}
@section MetaTags {
    <meta name="keywords" content="Kia Sonet vs Hyundai Venue, Sonet vs Venue 2024, compact SUV comparison India, Kia Sonet features, Hyundai Venue review, sub 4 meter SUV India, Sonet vs Venue performance, Venue vs Sonet boot space, Kia Sonet mileage, Hyundai Venue technology, Sonet vs Venue price, SUV comparison 2024" />
    <meta name="description" content="Explore a detailed comparison of Kia Sonet and Hyundai Venue — covering design, performance, features, safety, fuel economy, pricing, and more. Find out which compact SUV suits your driving style and budget in 2024." />
}

@functions {
    public string Truncate(string input, int length)
    {
        if (string.IsNullOrEmpty(input) || input.Length <= length)
            return input;
        return input.Substring(0, length) + "...";
    }
}
<body id="bg">
    @* <div class="header-img"><img src="~/images/main-slider/header.png" alt="bikecarhubheaderimage" title="bikecarhubheaderimage" /></div> *@
    <div class="m-t90">
        <div><h1 class="latest-bike-head">@Model.BlogHeading</h1></div>
        <div class=" latest-bike-container">
            @* <div style="background-image:url(@ViewBag.TWNews.ImageURL);background-repeat:no-repeat;background-position: center;background-size:contain ;height: 400px;box-shadow: 5px 10px 8px #888888;border-radius:10px;background-color:#ebecee;padding:60px;"></div> *@
