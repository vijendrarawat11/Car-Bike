@{
    ViewData["Title"] = "Maruti Brezza vs Hyundai Venue: Which Compact SUV is Better in 2025";
}
@section MetaTags {
    <meta name="keywords" content="Maruti Brezza vs Hyundai Venue, Brezza vs Venue comparison 2025, best compact SUV India, Maruti Brezza mileage, Hyundai Venue features, Brezza CNG vs Venue diesel, sub-4m SUV comparison, Brezza vs Venue price, which SUV to buy, BikeCarHub SUV review" />
    <meta name="description" content="Detailed comparison of Maruti Brezza vs Hyundai Venue covering engines (petrol/CNG/diesel), mileage, safety, features & prices. Find out which compact SUV is best for city driving or highway performance in 2025." />
}

@functions {
    public string Truncate(string input, int length)
    {
        if (string.IsNullOrEmpty(input) || input.Length <= length)
            return input;
        return input.Substring(0, length) + "...";
    }
}
<body id="bg">
    @* <div class="header-img"><img src="~/images/main-slider/header.png" alt="bikecarhubheaderimage" title="bikecarhubheaderimage" /></div> *@
