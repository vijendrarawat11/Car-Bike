@{
    ViewData["Title"] = "Tata Nexon EV vs Mahindra XUV400 EV – Detailed Comparison 2025";
}
@section MetaTags {
    <meta name="keywords" content="Tata Nexon EV vs Mahindra XUV400 EV, Nexon EV range, XUV400 EV features, Nexon EV price, XUV400 charging time, best electric SUVs in India 2025, Nexon vs XUV400 comparison, electric car buying guide" />
    <meta name="description" content="Compare Tata Nexon EV and Mahindra XUV400 EV for range, performance, features, and pricing. Find out which electric SUV suits your needs in 2025 with BikeCarHub" />
}

@functions {
    public string Truncate(string input, int length)
    {
        if (string.IsNullOrEmpty(input) || input.Length <= length)
            return input;
        return input.Substring(0, length) + "...";
    }
}
<body id="bg">
    @* <div class="header-img"><img src="~/images/main-slider/header.png" alt="bikecarhubheaderimage" title="bikecarhubheaderimage" /></div> *@
    <div class="m-t90">
        <div><h1 class="latest-bike-head">@Model.BlogHeading</h1></div>
        <div class=" latest-bike-container">
            @* <div style="background-image:url(@ViewBag.TWNews.ImageURL);background-repeat:no-repeat;background-position: center;background-size:contain ;height: 400px;box-shadow: 5px 10px 8px #888888;border-radius:10px;background-color:#ebecee;padding:60px;"></div> *@
