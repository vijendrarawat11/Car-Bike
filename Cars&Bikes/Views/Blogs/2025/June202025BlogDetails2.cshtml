@section MetaTags {
    <meta name="keywords" content="best electric cars in India under 15 lakh, electric cars under 15 lakhs 2025, Tata Tiago EV review, Nexon EV vs Punch EV, affordable EV cars India 2025, EV cars with best range under 15 lakh, MG Comet EV review India, budget electric SUV India, Citroën eC3 features India, top EVs under 15 lakh rupees" />
    <meta name="description" content="Explore the top electric cars under ₹15 lakh in India (2025) including Tata Tiago EV, Nexon EV, MG Comet, Citroën eC3 & more. Compare range, price, battery, pros & cons, and best EV for your needs." />
}
<!--For truncate-->
@functions {
    public string Truncate(string input, int length)
    {
        if (string.IsNullOrEmpty(input) || input.Length <= length)
            return input;
        return input.Substring(0, length) + "...";
    }
}
