                            <tr class="compare-head-text">
                                <td>Safety</td>
                                <td>Proven crash ratings</td>
                                <td>Advanced active safety</td>
                            </tr>
                            <tr>
                                <td>Tech Features</td>
                                <td>Basic to mid-level</td>
                                <td>Sunroof, dashcam, BlueLink</td>
                            </tr>
                            <tr class="compare-head-text">
                                <td>Comfort</td>
                                <td>Spacious cabin</td>
                                <td>Good ride, cozy rear bench</td>
                            </tr>
                            <tr>
                                <td>Convenience</td>
                                <td>Simple, reliable</td>
                                <td>Connected and practical</td>
                            </tr>
                            <tr class="compare-head-text">
                                <td>After-Sales Coverage</td>
                                <td>Large service network</td>
                                <td>Enhanced perks and warranty</td>
