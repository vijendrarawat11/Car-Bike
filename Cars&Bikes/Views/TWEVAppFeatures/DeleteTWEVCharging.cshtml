@model Cars_Bikes.Models.TWEVCharging
@{
    ViewData["Title"] = "Delete TW Charging";
}
<body>
    <div class="header-img"> <img src="~/images/main-slider/header.png" /></div>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
            <!-- only 80% screen height -->
            <form asp-controller="AdminLogin" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-danger btn-sm">Logout</button>
            </form>
            <div class="col-md-8 col-lg-6">
                <!-- middle sized form -->
                <div class="card shadow-lg p-4">
                    <h2 class="text-center mb-4">Delete TW  EV Charging</h2>

                    <div class="alert alert-danger text-center">
                        <p>Are you sure you want to delete this record?</p>
                    </div>

                    <table class="table table-bordered mx-auto text-center" style="width: 60%;">
                        <tr><th>Two Wheeler</th><td>@Model.TWName</td></tr>
                        <tr><th>Varient</th><td>@Model.Varients</td></tr>
                        <tr><th>Charging At Home</th><td>@Model.ChargingAtHome</td></tr>
                        <tr><th>Charging Station</th><td>@Model.ChargingAtChargingStation</td></tr>
                    </table>

                    <form asp-action="DeleteConfirmedTWEVCharging" method="post">
                        <input type="hidden" asp-for="TWEVChargingId" />
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                        <a asp-action="ListTWCharging" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>

        </div>
    </div>

</body>@*
