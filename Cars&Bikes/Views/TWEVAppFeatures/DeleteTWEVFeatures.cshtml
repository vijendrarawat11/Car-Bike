@model TWEVFeatures
@{
    ViewBag.Title = "Delete TW Features";
}

<body>
    <div class="header-img"> <img src="~/images/main-slider/header.png" /></div>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
            <!-- only 80% screen height -->
            <form asp-controller="AdminLogin" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-danger btn-sm">Logout</button>
            </form>
            <div class="col-md-8 col-lg-6">
                <!-- middle sized form -->
                <div class="card shadow-lg p-4">
                    <div class="container mt-4">
                        <h3>Delete TW Features</h3>

                        <div>
                            <h4>Are you sure you want to delete this?</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-3">TW Name</dt>
                                <dd class="col-sm-9">@Model.EVName</dd>

                                <dt class="col-sm-3">Varient</dt>
                                <dd class="col-sm-9">@Model.Varients</dd>

                                <dt class="col-sm-3">ABS</dt>
                                <dd class="col-sm-9">@Model.Clock</dd>

                                <dt class="col-sm-3">Speedometer</dt>
                                <dd class="col-sm-9">@Model.Speedometer</dd>

                                
                            </dl>

                            <form asp-action="DeleteConfirmedTWEVFeatures" method="post">
                                <input type="hidden" asp-for="TWEVFeaturesId" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <a asp-action="ListEVTWFeatures" class="btn btn-secondary">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

</body>