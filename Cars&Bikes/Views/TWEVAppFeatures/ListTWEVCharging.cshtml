@model IEnumerable<Cars_Bikes.Models.TWEVCharging>
@{
    ViewData["Title"] = "EV Charging List";
}

<body>
    <div class="header-img"> <img src="~/images/main-slider/header.png" /></div>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
            <!-- only 80% screen height -->

            <div class="col-md-8 col-lg-6">
                <!-- middle sized form -->
                <div class="text-end mb-2">
                    <form asp-controller="AdminLogin" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-danger btn-sm">Logout</button>
                    </form>
                </div>
                <div class="card shadow-lg p-4">
                    <h2>EV Charging List</h2>

                    <form method="get">
                        <input type="text" name="search" placeholder="Search..." class="form-control" />
                        <button type="submit" class="btn btn-primary mt-2 mb-3">Search</button>
                    </form>

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Two Wheeler</th>
                                <th>Variant</th>
                                <th>Charging At Home</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TwoWheeler?.TwoWheelerName</td>
                                    <td>@item.TWVarients?.TWName</td>
                                    <td>@item.ChargingAtHome</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.TWEVChargingId" class="btn btn-sm btn-warning">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.TWEVChargingId" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

</body>
