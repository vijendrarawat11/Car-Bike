@model Cars_Bikes.Models.TWEVCharging

@{
    ViewData["Title"] = "Add Two Wheeler EV Charging";
}

<body>
    <div class="header-img"> <img src="~/images/main-slider/header.png" /></div>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
            <!-- only 80% screen height -->

            <div class="col-md-8 col-lg-6">
                <!-- middle sized form -->
                <div class="text-end mb-2">
                    <form asp-controller="AdminLogin" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-danger btn-sm">Logout</button>
                    </form>
                </div>
                <div class="card shadow-lg p-4">
                    <h2 class="text-center mb-4">Add EV Charging Features</h2>
                    <form asp-action="CreateTWEVCharging" method="post">
                        <div class="form-group">
                            <label>Two Wheeler</label>
                            <select asp-for="TwoWheelerId" class="form-control" asp-items="ViewBag.TwoWheelers"></select>
                        </div>
                        <div class="form-group">
                            <label>Variant</label>
                            <select asp-for="TWVarientId" class="form-control" asp-items="ViewBag.TWVarients"></select>
                        </div>
                        <div class="form-group">
                            <label>Charging at Home</label>
                            <input asp-for="ChargingAtHome" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>ChargingAtChargingStation</label>
                            <input asp-for="ChargingAtChargingStation" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>ChargingTimeZeroTo80Percent</label>
                            <input asp-for="ChargingTimeZeroTo80Percent" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>ChargingTimeZeroTo100Percent</label>
                            <input asp-for="ChargingTimeZeroTo100Percent" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>ChargingNetworkBatterySwappingNetwork</label>
                            <input asp-for="ChargingNetworkBatterySwappingNetwork" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="TwoWheelerId">Select Two Wheeler</label>
                            <select asp-for="TwoWheelerId" class="form-control" asp-items="ViewBag.TwoWheelers">
                                <option value="">-- Select --</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="TWVarientId">Select Variant</label>
                            <select asp-for="TWVarientId" class="form-control" asp-items="ViewBag.TWVarients">
                                <option value="">-- Select --</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>

        </div>
    </div>

</body>